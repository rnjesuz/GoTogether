<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuButton_Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>

    <style name="GoTogether_Theme" parent="AppTheme" >
        <item name="colorPrimary">@color/green_normal</item>
        <item name="colorPrimaryDark">@color/green_rippled</item>
        <item name="colorAccent">@color/green_complementary</item>
        <item name="android:windowBackground">@color/material_green_50</item>
        <item name="actionBarItemBackground">@color/green_normal</item>
    </style>

    <style name="GoTogether_Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/green_normal</item>
        <item name="colorPrimaryDark">@color/green_rippled</item>
        <item name="colorAccent">@color/green_complementary</item>
    </style>

    <style name="GoTogether_Theme.DenseBar" parent="GoTogether_Theme">
        <item name="actionBarSize">40dip</item>
        <item name="android:actionBarSize">40dip</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="GoTogether_Theme.EditText" parent="GoTogether_Theme">
        <item name="colorControlNormal">@color/white_38_opacity</item>
        <item name="colorControlActivated">@color/green_complementary</item>

        <item name="android:textColorHint">@color/white_38_opacity</item>
    </style>

</resources>
