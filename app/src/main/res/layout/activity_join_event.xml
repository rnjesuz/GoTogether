<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".JoinEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/joinEventActivityCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_join">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/destinationMap_join"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                map:uiRotateGestures="true"
                map:uiZoomControls="true"
                map:uiZoomGestures="true"
                tools:context=".JoinEventActivity" />

            <TextView
                android:id="@+id/startTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/question_starting_position"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/destinationMap_join" />

            <fragment
                android:id="@+id/start_autocomplete_fragment_join"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imageButton3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startTextView" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_autocomplete_fragment_join">

                <expandablelib.gotogether.ExpandableLayout
                    android:id="@+id/el_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:childLayout="@layout/layout_child"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:parentLayout="@layout/layout_parent"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="172dp" />

            </ScrollView>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_roundcorners_border"
                android:onClick="setMyLocation"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startTextView"
                app:srcCompat="@drawable/baseline_my_location_24" />
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/button_join"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

           <!-- <ImageButton
                android:id="@+id/join_done"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shadow_circle"
                android:contentDescription="TODO"
                android:onClick="concludeCreation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/baseline_done_white_24" /> -->

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/join_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_done_white_24"
                fab:fab_size="normal"
                style="@style/MenuButton_Green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:onClick="concludeCreation"
                android:visibility="invisible"
                tools:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>