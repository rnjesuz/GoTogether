<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/join_activity_input_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="#ffffff"
    >

    <EditText
        android:id="@+id/activity_identifier_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="What's the Identifier?"
        android:inputType="text"
        android:padding="25sp"
        android:text="teste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_identifier_cancel"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/activity_identifier_et"
        android:layout_below="@+id/activity_identifier_et"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/green_complementary"
        app:layout_constraintEnd_toStartOf="@+id/activity_identifier_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_identifier_et" />

    <Button
        android:id="@+id/activity_identifier_confirm"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/activity_identifier_et"
        android:layout_below="@+id/activity_identifier_et"
        android:background="@null"
        android:text="Join"
        android:textAllCaps="false"
        android:textColor="@color/green_normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_identifier_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_identifier_cancel" />

</android.support.constraint.ConstraintLayout>